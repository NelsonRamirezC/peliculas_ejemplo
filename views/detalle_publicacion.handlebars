    {{else}}
    <div class="d-flex justify-content-center">
                <div>
                    {{>card_like
                    id=publicacion.id
                    imagen=publicacion.imagen
                    titulo=publicacion.titulo
                    contenido=publicacion.contenido
                    fecha = publicacion.fecha
                    autor = publicacion.autor
                    like= like
                    }}
