<h2 class="text-center mt-3">VISTA PRINCIPAL</h2>


<section class="py-5">
    <div class="d-flex justify-content-center py-5">
        <a href="/?order=asc" class="btn btn-secondary mx-2">Ascendente</a>
        <a href="/?order=desc" class="btn btn-secondary mx-2">Descendente</a>
    </div>
    


    {{#if error}}
        <h2 class="text-center mt-2">{{error}}</h2>
    {{else}}
    <div class="row">
         {{#each publicaciones}}
                <div class="col-12 col-md-6 col-lg-4 mt-2">
                    {{>card
                    id=this.id
                    idPublicacion=this.id
                    imagen=this.imagen
                    titulo=this.titulo
                    contenido=this.contenido
                    fecha = this.fecha
                    autor = this.autor
                    }}
                </div>
        {{/each}}
    </div>
       
    {{/if}}

</section>



<script>
    const irDetalle = (idPublicacion) => {

        if(localStorage.getItem("jwt")){
            location.href = `/publicacion/${idPublicacion}?token=`+localStorage.getItem("jwt")
        }else{
            location.href = `/publicacion/${idPublicacion}`
        }
    }
</script>

